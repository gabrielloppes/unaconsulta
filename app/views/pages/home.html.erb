<header>
  <div class="header-content">
    <h1>Find a property to see or leave reviews</h1>
    <div class="search-form">
      <form action="">
        <div class="form-group form-inline d-flex justify-content-center align-items-center">
          <%= form_tag nil, id: "main-form", method: :get do %>
          <%= text_field_tag :query,
              params[:query],
              class: "form-control user_input",
              placeholder: "What are you looking for?",
              required: true
            %>
          <button id="find">Find property</button>
          <% end %>
        </div>
      </form>
    </div>
  </div>
