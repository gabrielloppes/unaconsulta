<div class="d-flex justify-content-between fixed-top align-items-center px-4 py-2 mb-2" style="background-color: #224a62">
  <%= link_to "/", class: "navbar-brand-home" do %>
    <%= image_tag "logo-una-consulta.svg" %>
  <% end %>

  <div>
    <ul style="margin-bottom: 0;">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

          <a class="dropdown-item" href="/user_reviews">My Reviews</a>
          <a class="dropdown-item" href="/profile">Profile</a>
          <a class="dropdown-item" href="/users/sign_out" data-method="delete">Log Out</a>

        </div>

      </li>
      <% else %>
      <%= link_to "Log In", new_user_session_path, class: "btn-sign-in" %>
      <%= link_to "Sign Up", new_user_registration_path , class: "btn-sign-up" %>
      <!-- <li><a href="#" class="btn-sign-in">Sign In</a></li>
        <li><a href="#" class="btn-sign-up">Sign Up</a></li> -->
      <% end %>
    </ul>
  </div>

</div>
